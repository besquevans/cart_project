<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-9">
      <div class="col-md-4">
        <%= show_product_picture(@product) %>
        <br>
        
      </div>
      <div class="col-md-8">
        <div class="well">
          <h3><%= @product.name %></h3>
          <h3>$ <%= @product.price %></h3>       
        </div>
        
        <%= simple_format @product.description %>
        
        <br/>
        <h5>
          <%= button_to 'add to cart', add_to_cart_product_path(@product), remote: true, class: "btn btn-default" %>
        </h5>
      </div>
    </div>

    <div class="col-sm-4 col-md-3">
      <%= render partial: "shared/cart" %>
    </div>
  </div>
</div>
