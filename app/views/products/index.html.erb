<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-9">
      <%# search %>
      <%= form_tag(products_path, method: :get, class: "form-inline") do %>
        <div class="form-group">
          <%= label_tag :name, "Search" %>
          <%= text_field_tag :name %>
        </div>

        <%= button_tag(type: "submit", class: "btn btn-default btn-sm") do %>
          <span><i class="glyphicon glyphicon-search"></i></span>
        <% end %>
      <% end %>

      <%# products %>
      <div id="products" class="clearfix">
        <% @products.each do |product| %>
          <div class="hidden-xs">
            <div class="col-sm-12 col-md-4 col-lg-3">
              <div class="product-box product_<%= product.id %>">
                <%= link_to product_path(product) do %>
                  <%= show_product_picture product %>
                <% end %>

                <div class="caption">
                  <h4><%= link_to product.name, product_path(product) %></h4>
                  <p><%= truncate(product.description, length: 17) %></p>
                  <p>$ <%= product.price %><p>
                    <div class="add-to-cart">
                      <%= button_to t(:add_to_cart), add_to_cart_product_path(product), remote: true, class: "btn btn-default" %>
                    </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center">
        <%= paginate @products %>
      </div>
    </div>    

    <%# cart %>
    <div class="col-sm-6 col-md-3">
      <%= render partial: "shared/cart" %>
    </div>
  </div>
</div>
