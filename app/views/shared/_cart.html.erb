<section id="my-cart">
  <div class ="item-list">
    <% current_cart.cart_items.each do |item| %>
      <%= render partial: "shared/item", locals: { item: item } %>
    <% end %>
  </div>
  <hr>
  <div class="under-my-cart">
    <div class="subtotal">
      <p>SUBTOTAL</p>
      <p class="amount">$ <%= current_cart.subtotal %></p>
    </div>
  
    <div class="button">   
      <%= show_my_cart() %>
    </div>
    <div class="button">
      <%= show_my_orders() %>
    </div>
  </div>
  
</section>

