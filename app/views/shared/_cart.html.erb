<div>
  <% @items.each do |item| %>
    <div class="cart-item">
      <div class="col-sm-6 col-md-4">
        <% if item.product.image? %>
          <%= image_tag item.product.image.url, class: "img-responsive center-block" %>
        <% else %>
          <span class="glyphicon glyphicon-picture"></span>
        <% end %>
      </div>

      <div class="col-sm-6 col-md-8">
        <p><%= item.product.name %></p>
        <p>$ <%= item.product.price %></p>
        <p>
          <%= link_to '+', adjust_item_product_path(item.product, type: "add"), method: :post %>
          <%= item.quantity %>
          <%= link_to '-', adjust_item_product_path(item.product, type: "substract"), method: :post %>
            
          <%= link_to 'Delete', remove_from_cart_product_path(item.product), method: :post, class: "btn btn-default" %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<div>
  <%= link_to 'View Cart', cart_path(current_cart), class: "btn btn-default" %>
</div>
