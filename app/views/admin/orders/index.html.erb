<div class="container">
   <h3>Order後台</h3>
   <div class="row">
     <div class="col-md-12">
      <div>
        <%= link_to 'Product', admin_products_path %> |
        <%= link_to 'Order', admin_orders_path %>
        <h5>
          <span>*Paid Order: <%= Order.where(payment_status: "paid").size %></span>
          <span>*Shipped Order: <%= Order.where(shipping_status: "shipped").size %></span>
          <span>*Order Count: <%= Order.find_each.size %></span>
        </h5>
      </div>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Order Number</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>Payment status</th>
            <th>Shipping status</th>
            <th>Order Detail</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.sn %></td>
            <td><%= order.user.email %></td>
            <td><%= order.amount %></td>
            <td><%= order.payment_status %></td>
            <td><%= order.shipping_status %></td>
            <td>
              <%= link_to 'Edit', edit_admin_order_path(order) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
       <div class="text-center">
        <%= paginate @orders %>
      </div>
     </div>
   </div>
</div>