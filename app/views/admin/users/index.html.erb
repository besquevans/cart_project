<div class="container">
  <h3>後台</h3>
  <div class="row">
    <div class="col-md-12">
      <div class="btn-group">
        <%= link_to 'Products', admin_products_path, class: "btn btn-default" %>
        <%= link_to 'Orders', admin_orders_path, class: "btn btn-default" %> 
        <%= link_to 'Users', admin_users_path, class: "btn btn-primary" %>
      </div>
      <br>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th><%= sort_link(@q, :id, 'Id', default_order: :asc) %></th>
            <th><%= sort_link(@q, :name, 'Name', default_order: :asc) %></th>
            <th><%= sort_link(@q, :email, 'Email', default_order: :asc) %></th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td>
              <span class="badge"><%= user.role %></span>
              <%= user.name %>
            </td>
            <td><%= user.email %></td>
            <td>
              <%= link_to edit_admin_user_path(user) do %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              <% end %>
              
              <%= link_to admin_user_path(user), method: :delete, data: { confirm: "Are you sure?"} do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>